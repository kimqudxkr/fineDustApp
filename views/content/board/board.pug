extends ../../layout

block content
    link(rel='stylesheet', href='/css/style.css')
    
    #support-container.container-fluid
        div(style='text-align:center')
            p

            table(class='table table-striped table-hover', style="width:800px; margin-left:auto; margin-right:auto")
                thead
                    tr
                        th 번호
                        th 제목
                        th 작성자
                        th 날짜
                tbody
                    each i in result
                        tr
                            td=i.no
                            td
                                a(href='/show?no='+i.no)=i.title
                            td=i.writer
                            td=i.date

            button.btn.btn-primary(
                style='float:right; margin-right:340px'
                type='button'
                onclick="location.href='/write'"
            ) 글쓰기